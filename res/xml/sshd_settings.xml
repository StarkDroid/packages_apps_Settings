<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/sshd_settings"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">
    
    <!-- Sungsonic Logo -->
	<PreferenceScreen
	    android:key="sshd_logo"
        android:enabled="true"
        android:layout="@layout/sshd_logo_row" />
		
	<!-- User interface -->
    <PreferenceScreen
    	android:key="ui"
        android:fragment="com.android.settings.sshd.InterfaceSettings"
        android:title="@string/ui"
	android:enabled="true" />
    
    <!-- System -->
    <PreferenceScreen
    	android:key="system"
        android:fragment="com.android.settings.sshd.System"
        android:title="@string/system"
	android:enabled="true" />
	    
    <!-- Notifications -->
    <!--<PreferenceScreen
    	android:key="notifications"
        android:fragment="com.android.settings.sshd.Notifications"
        android:title="@string/notifications"
	android:enabled="false" />-->
	
	<!-- Navigation Bar -->
    <PreferenceScreen
    	android:key="navibar"
        android:fragment="com.android.settings.sshd.Navbar"
        android:title="@string/navbar_navring"
	    android:enabled="true" />
	
    <!-- Sound & volume -->
    <PreferenceScreen
    	android:key="sounds"
        android:title="@string/sounds"
        android:fragment="com.android.settings.sshd.SoundSettings"
	android:enabled="true" />	    
	
	<!-- Lockscreen -->	
    <PreferenceScreen
    	android:key="lockscreen"
        android:fragment="com.android.settings.sshd.Lockscreen"
        android:title="@string/lc"
	android:enabled="true" />
	
	<!-- Recents -->
	<PreferenceScreen
          android:key="recents"
          android:fragment="com.android.settings.sshd.Recents"
         android:title="@string/recents"
    android:enabled="true" />
	
	<!-- Power Menu -->
	<PreferenceScreen
        android:key="powermenu"
        android:fragment="com.android.settings.sshd.PowerMenu"
        android:title="@string/powermenu_category"
		android:enabled="true" />
    
    <!-- IME Settings -->	
    <PreferenceScreen
        android:key="keyboard_input_settings"
        android:fragment="com.android.settings.sshd.InputMethodsSettings"
        android:title="@string/title_keyboard_input"
	android:enabled="true" />
    
    <!-- Misc -->	
    <!--<PreferenceScreen
    	android:key="misc"
        android:fragment="com.android.settings.sshd.Misc"
        android:title="@string/misc"
	android:enabled="false" />-->	

</PreferenceScreen>
